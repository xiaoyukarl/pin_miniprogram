.sim-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
  display: none;
}
.sim-modal-container {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}
.sim-modal-show .sim-modal-container {
  transform: translateY(0);
}
.sim-modal-show .sim-modal-mask {
  display: block;
}